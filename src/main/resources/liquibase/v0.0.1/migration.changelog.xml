	<changeSet id="CSET.FILES" author="Dmitry Mikhaylenko">
		<createTable tableName="FILES">
			<column name="DISTRIBUTION_POINT_NAME" type="VARCHAR(16)"
				remarks="The distribution point with which the file is associated.">
				<constraints nullable="false" />
			</column>

			<column name="STORAGE_FILE_NAME" type="VARCHAR(64)"
				remarks="The file name into file storage.">
				<constraints nullable="false" />
			</column>

			<column name="STORAGE_NAME" type="VARCHAR(16)"
				remarks="The storage name where file is stored.">
				<constraints nullable="true" />
			</column>

			<column name="STATUS" type="VARCHAR(16)"
				remarks="The current file status name.">
				<constraints nullable="false" />
			</column>

			<column name="MEDIA_TYPE" type="VARCHAR(200)"
				remarks="The storage media type name.">
				<constraints nullable="false" />
			</column>

			<column name="FILE_NAME" type="VARCHAR(400)"
				remarks="The file download name.">
				<constraints nullable="false" />
			</column>

			<column name="CONTENT_LENGTH" type="BIGINT(20)"
				remarks="The stored file content length.">
				<constraints nullable="false" />
			</column>

			<column name="CREATED_AT" type="DATETIME"
				remarks="A time shows when the file was created.">
				<constraints nullable="false" />
			</column>

			<column name="DISPOSED_AT" type="DATETIME"
				remarks="A time shows when the file was disposed.">
				<constraints nullable="true" />
			</column>
		</createTable>

		<addPrimaryKey tableName="FILES"
			columnNames="DISTRIBUTION_POINT_NAME, STORAGE_FILE_NAME" />

		<addForeignKeyConstraint
			constraintName="FK_FILES$REF_DISTRIBUTION_POINTS"
			baseTableName="FILES" baseColumnNames="DISTRIBUTION_POINT_NAME"
			referencedTableName="REF_DISTRIBUTION_POINTS"
			referencedColumnNames="DISTRIBUTION_POINT_NAME" />

		<addForeignKeyConstraint
			constraintName="FK_FILES$REF_STORAGES" baseTableName="FILES"
			baseColumnNames="STORAGE_NAME" referencedTableName="REF_STORAGES"
			referencedColumnNames="STORAGE_NAME" />

		<addForeignKeyConstraint
			constraintName="FK_FILES$REF_MEDIA_TYPES" baseTableName="FILES"
			baseColumnNames="MEDIA_TYPE" referencedTableName="REF_MEDIA_TYPES"
			referencedColumnNames="MEDIA_TYPE" />
	</changeSet>
	
	<changeSet id="CSET.ADD_V_STORAGES_VIEW" author="Dmitry Mikhaylenko">
		<createView viewName="V_STORAGES">
			WITH `V_LOCAL_STORAGES` AS (SELECT
					DISTRIBUTION_POINT_NAME,
					S.STORAGE_NAME,
					MEDIA_TYPE,
					'LOCAL' AS STORAGE_TYPE,
					BASE_DIRECTORY,
					DISK_QUOTE
				FROM
					REF_STORAGES S
				LEFT JOIN REF_LOCAL_STORAGES LS ON
					S.STORAGE_NAME = LS.STORAGE_NAME),
				`V_REMOTE_STORAGES` AS (SELECT
					RS.DISTRIBUTION_POINT_NAME,
					S.STORAGE_NAME,
					MEDIA_TYPE,
					'REMOTE' AS STORAGE_TYPE,
					DP.DP_REMOTE_STORAGE_GATEWAY_WSDL 
				FROM
					REF_STORAGES S
				RIGHT JOIN REF_REMOTE_STORAGES RS ON
					S.STORAGE_NAME = RS.STORAGE_NAME
				LEFT JOIN REF_DISTRIBUTION_POINTS DP ON
					RS.DISTRIBUTION_POINT_NAME = DP.DISTRIBUTION_POINT_NAME)
			SELECT 
				DISTRIBUTION_POINT_NAME, 
				STORAGE_NAME, 
				MEDIA_TYPE, 
				STORAGE_TYPE, 
				BASE_DIRECTORY, 
				DISK_QUOTE, 
				NULL AS DP_REMOTE_STORAGE_GATEWAY_WSDL 
			FROM V_LOCAL_STORAGES 
			UNION SELECT 
				DISTRIBUTION_POINT_NAME, 
				STORAGE_NAME, 
				MEDIA_TYPE, 
				STORAGE_TYPE, 
				NULL AS BASE_DIRECTORY,
				NULL AS DISK_QUOTE,
				DP_REMOTE_STORAGE_GATEWAY_WSDL 
			FROM V_REMOTE_STORAGES
			ORDER BY DISTRIBUTION_POINT_NAME, STORAGE_NAME
		</createView>
	</changeSet>
</databaseChangeLog>
