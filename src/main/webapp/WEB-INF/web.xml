<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
	<display-name>Binary Cloud Storage</display-name>
	<servlet>
		<servlet-name>HttpContentManagementServlet</servlet-name>
		<servlet-class>io.bcs.fileserver.infrastructure.api.open.HttpContentManagementServlet</servlet-class>
		<async-supported>true</async-supported>
	</servlet>
	
	<servlet>
		<servlet-name>HttpRemoteContentAccessServlet</servlet-name>
		<servlet-class>io.bcs.fileserver.infrastructure.api.internal.HttpRemoteContentAccessServlet</servlet-class>
		<async-supported>true</async-supported>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HttpContentManagementServlet</servlet-name>
		<url-pattern>/public/content</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>HttpRemoteContentAccessServlet</servlet-name>
		<url-pattern>/private/access/direct/content</url-pattern>
	</servlet-mapping>
</web-app>
